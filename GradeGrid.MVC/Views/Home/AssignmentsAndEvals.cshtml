@model GradeGrid.MVC.ViewModels.AssignmentsAndEvalsViewModel

<h1>Assignments & Evaluations</h1>

<button class="btn btn-primary mb-3 mt-5 mb-2">Add New</button>

<div class="container text-center">
    <div class="row">
        <div class="col-4">
            <div class="list-group">
                @foreach (var item in Model.PaginatedItems)
                {
                    <a asp-route-selectedItemId="@item.Id" asp-route-currentPage="@Model.CurrentPage"
                       class="list-group-item list-group-item-action @(Model.SelectedItemId == item.Id ? "active" : "")">

                        <strong>@item.Title</strong>

                        @if (Model.SelectedItemId == item.Id)
                        {
                            <div class="mt-2 small">@item.Description</div>
                        }
                    </a>
                }
            </div>

            <nav class="mt-3" align="center">

                <ul class="pagination justify-content-center" align="center">

                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-selectedItemId="@Model.SelectedItemId">Previous</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-currentPage="@i" asp-route-selectedItemId="@Model.SelectedItemId">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-selectedItemId="@Model.SelectedItemId">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="col-6">
            @if (Model.SelectedItem != null)
            {
                <div class="assignment-details card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h2 class="card-title mb-0">@Model.SelectedItem.Title</h2>
                            <div>
                                <button class="btn btn-primary btn-sm">Edit</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </div>
                        </div>

                        @if (Model.SelectedItem.RelevantResources.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var resource in Model.SelectedItem.RelevantResources)
                                {
                                    <li class="list-group-item"><a href="#">@resource</a></li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No relevant resources for this item.</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
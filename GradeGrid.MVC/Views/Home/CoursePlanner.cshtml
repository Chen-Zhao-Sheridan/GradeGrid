@model GradeGrid.MVC.ViewModels.CoursePlannerViewModel
@using System.Linq

<h1>Course Schedule Planner</h1>

<div class="container text-center">
    <div class="row">
        <div class="col-4">
            <label for="currentView" class="form-label">Current View</label>
            <select class="form-select" id="currentView">
                <option>Courses Offered (This) Semester</option>
                <option>Courses Offered (Next) Semester</option>
                <option>All Courses To Graduate</option>
                <option selected>Generated Week Plans</option>
            </select>
            <div class="card mt-4">
                <div class="card-body p-0">
                    <table class="table table-bordered mb-0">
                        <thead>
                            <tr>
                                <th>Courses</th>
                                <th>Planning To Take</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Courses)
                            {
                                <tr>
                                    <td>@course.CourseCode</td>
                                    <td class="text-center"><input class="form-check-input" type="checkbox" checked></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-7">

            <div class="container mt-5">
                <div class="table-container">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col" class="col">Monday</th>
                                <th scope="col" class="col">Tuesday</th>
                                <th scope="col" class="col">Wednesday</th>
                                <th scope="col" class="col">Thursday</th>
                                <th scope="col" class="col">Friday</th>
                            </tr>
                        </thead>

                        <tbody>
                            @* Loop through the hours of the day to create each row *@
                            @for (int hour = 7; hour <= 20; hour++)
                            {
                                <tr class="table-divider-label">
                                    <td colspan="5"><span>@hour:00</span></td>
                                </tr>
                                <tr>
                                    <td>
                                        @foreach (var course in Model.Courses.Where(c => c.Hour == hour && c.Day == DayOfWeek.Monday))
                                        {
                                            <div class="course-item">@course.CourseCode</div>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var course in Model.Courses.Where(c => c.Hour == hour && c.Day == DayOfWeek.Tuesday))
                                        {
                                            <div class="course-item">@course.CourseCode</div>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var course in Model.Courses.Where(c => c.Hour == hour && c.Day == DayOfWeek.Wednesday))
                                        {
                                            <div class="course-item">@course.CourseCode</div>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var course in Model.Courses.Where(c => c.Hour == hour && c.Day == DayOfWeek.Thursday))
                                        {
                                            <div class="course-item">@course.CourseCode</div>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var course in Model.Courses.Where(c => c.Hour == hour && c.Day == DayOfWeek.Friday))
                                        {
                                            <div class="course-item">@course.CourseCode</div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>

        </div>
    </div>
</div>